<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="MOJ RAČUN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/putPunoIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Puno ime"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/putKorIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Korisničko ime"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/putPunoIme"
        app:layout_constraintTop_toBottomOf="@+id/putPunoIme" />

    <EditText
        android:id="@+id/putLozinka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Lozinka"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/putKorIme"
        app:layout_constraintStart_toStartOf="@+id/putKorIme"
        app:layout_constraintTop_toBottomOf="@+id/putKorIme" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Azuriraj"
        android:onClick="updateUser"
        app:layout_constraintEnd_toEndOf="@+id/putLozinka"
        app:layout_constraintStart_toStartOf="@+id/putLozinka"
        app:layout_constraintTop_toBottomOf="@+id/putLozinka" />
</androidx.constraintlayout.widget.ConstraintLayout>